// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Impression {
  id          Int      @id @default(autoincrement())
  ip_address  String  
  type        String   @default("Home")
  app         String   @default("/vps/home")
  user_agent  String?
  action      String   @default("init")
  language    String   @default("es-ES")
  url         String   
  screen      String?
  viewport    String?
  date        DateTime @default(now())
}
