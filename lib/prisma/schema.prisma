generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model impressions {
  id         Int       @id @default(autoincrement())
  ip_address String    @db.VarChar(50)
  type       String?   @default("HOME") @db.VarChar(15)
  app        String?   @default("/vps/home") @db.VarChar(15)
  user_agent String?   @db.VarChar(150)
  action     String?   @default("init") @db.VarChar(20)
  language   String?   @default("es-ES") @db.VarChar(10)
  url        String?   @db.VarChar(250)
  screen     String?   @db.VarChar(100)
  viewport   String?   @db.VarChar(100)
  date       DateTime? @default(now()) @db.DateTime(0)
}
